{
  "name": "portfolio-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "usemin": "usemin contactus.html -d dist --htmlmin -o dist/contactus.html && usemin menu.html -d dist --htmlmin -o dist/menu.html && usemin aboutus.html -d dist --htmlmin -o dist/aboutus.html && usemin index.html -d dist --htmlmin -o dist/index.html",
    "imagemin": "imagemin img/* -o dist/img",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/*dist/fonts",
    "watch:scss": "onchange \"css/*.scss\" --npm run scss",
    "watch:all": "parallelshell  \"npm run watch:scss\" \"npm run lite\"",
    "scss": "node-sass -o css/ css/",
    "start": "npm run watch:all",
    "lite": "lite-server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathankthedeveloper/portfolio_project.git"
  },
  "author": "Nathan Keh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nathankthedeveloper/portfolio_project/issues"
  },
  "homepage": "https://github.com/nathankthedeveloper/portfolio_project#readme",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "imagemin-cli": "^5.1.0",
    "lite-server": "^2.6.1",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.0",
    "parallelshell": "3.0.1",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "debug": "^4.3.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  }
}
